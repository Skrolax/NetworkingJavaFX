<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="648.0" prefWidth="939.0" styleClass="root-pane" stylesheets="@../../../Style/OpenedChatMenuStyle.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.socketprogramming.networkingjavafx.OpenedChatMenuController">
   <bottom>
      <HBox prefHeight="50.0" prefWidth="939.0" styleClass="message-box-panel" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="50.0" prefWidth="417.0" styleClass="profile-container" />
            <HBox alignment="CENTER" prefHeight="26.0" prefWidth="938.0" styleClass="send-message-container">
               <children>
                  <TextField fx:id="messagePromptField" prefHeight="26.0" prefWidth="439.0" promptText="your text message" styleClass="send-message-prompt" />
                  <Button fx:id="openFileButton" mnemonicParsing="false" onAction="#selectFile" prefHeight="26.0" prefWidth="90.0" styleClass="open-image-button" text="Open Image" />
                  <Label fx:id="fileNameLabel" alignment="CENTER" prefHeight="26.0" prefWidth="128.0" styleClass="image-file-label" />
                  <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendTextMessage" prefHeight="26.0" prefWidth="47.0" styleClass="send-message-button" text="Send" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox fx:id="messageArea" prefHeight="590.0" prefWidth="709.0" spacing="3.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin></VBox>
   </center>
   <left>
      <VBox fx:id="friendList" prefHeight="592.0" prefWidth="205.0" styleClass="friend-list-panel" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="31.0" prefWidth="200.0" styleClass="friend-list-title" text="Friends" textAlignment="CENTER" />
            <HBox prefHeight="22.0" prefWidth="200.0" styleClass="add-friend-container">
               <children>
                  <TextField fx:id="addFriendField" alignment="TOP_LEFT" prefHeight="27.2" prefWidth="150.0" promptText="Add a friend" styleClass="add-friend-field" />
                  <Button fx:id="addFriendButton" mnemonicParsing="false" onAction="#sendFriendRequest" prefHeight="25.0" prefWidth="46.0" styleClass="add-friend-button" text="Add" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <VBox fx:id="selectFriendVBox" prefHeight="523.0" prefWidth="203.0" spacing="2.0" styleClass="friend-list-container" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets right="5.0" top="5.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </left>
</BorderPane>
