<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="648.0" prefWidth="939.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.socketprogramming.networkingjavafx.MainMenuController">
   <bottom>
      <HBox prefHeight="57.0" prefWidth="939.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="58.0" prefWidth="938.0">
               <children>
                  <HBox prefHeight="26.0" prefWidth="938.0">
                     <children>
                        <TextField fx:id="messagePromptField" prefHeight="26.0" prefWidth="696.0" promptText="your text message" />
                        <TextField fx:id="senderUsernameField" prefHeight="26.0" prefWidth="199.0" promptText="sender's username" />
                        <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendTextMessage" text="Send" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="openFileButton" mnemonicParsing="false" onAction="#selectFile" prefHeight="32.0" prefWidth="698.0" text="Open Image" />
                        <Label fx:id="fileNameLabel" alignment="CENTER" prefHeight="36.0" prefWidth="242.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
   <left>
      <VBox prefHeight="621.0" prefWidth="187.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="186.0" text="Friends" textAlignment="CENTER" />
            <HBox prefHeight="60.0" prefWidth="186.0">
               <children>
                  <TextField fx:id="addFriendField" promptText="Add a friend" />
                  <Button fx:id="addFriendButton" mnemonicParsing="false" onAction="#sendFriendRequest" text="Add" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <right>
      <TextArea fx:id="messageArea" prefHeight="621.0" prefWidth="752.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
